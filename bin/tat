#!/bin/bash

if [[ $# -eq 0 ]]; then
  path=$PWD
elif [[ $# -eq 1 ]]; then
  if [ "$1" == "fzf" ]; then
    path=$(find "$HOME" "$HOME/Git" "$HOME/Projects" -mindepth 1 -maxdepth 1 | fzf --reverse)
    if [ "$path" == "" ]; then
      exit 0
    fi
  else
    echo "'fzf' is the only supported argument at this time"
    exit 1
  fi
else
  echo "unsupported number of arguments: 0 or 1 expected, got $#"
  exit 1
fi

session_name="$(basename "$path" | tr . _)"

not_in_tmux() {
  [ -z "$TMUX" ]
}

session_exists() {
  tmux list-sessions | sed -E 's/:.*$//' | grep -q "^$session_name$"
}

create_detached_session() {
  (TMUX='' tmux new-session -Ad -s "$session_name" -c "$path")
}

create_if_needed_and_attach() {
  if not_in_tmux; then
    tmux new-session -As "$session_name" -c "$path"
  else
    if ! session_exists; then
      create_detached_session
    fi
    tmux switch-client -t "$session_name"
  fi
}

create_if_needed_and_attach
