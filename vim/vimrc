"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" => Plugin Manager
"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
call plug#begin('~/.config/vim/pack/remote/opt')

" show completion entries for typed characters
Plug 'vim-scripts/AutoComplPop', { 'on': [] }

" intellisense engine with language server protocol support
if has('nvim')
	Plug 'neoclide/coc.nvim', { 'branch': 'release' }
endif

" command line fuzzy finder
Plug 'junegunn/fzf.vim', { 'on': ['Files', 'Buffers', 'Ag', 'Rg', 'Windows'] }

" emphasize the current matched search pattern
Plug 'wincent/loupe'

" undo history visualizer
Plug 'mbbill/undotree', { 'on': 'UndotreeToggle' }

" dim the current window/buffer when not active
Plug 'blueyed/vim-diminactive'

" create file and parent direcory at the same time
Plug 'duggiefresh/vim-easydir'

" a git wrapper for vim
Plug 'tpope/vim-fugitive'

" highlight the yanked region
Plug 'machakann/vim-highlightedyank'

" enable repeating supported plug maps with <.>
Plug 'tpope/vim-repeat'

" display git changes in gutter
Plug 'mhinz/vim-signify'

" surround sequence with tags
Plug 'tpope/vim-surround'

" enable focus events
Plug 'tmux-plugins/vim-tmux-focus-events'

" maintain git workflow within vim
Plug 'jreybert/vimagit'

call plug#end()
