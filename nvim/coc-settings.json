{
	// bash
	"languageserver": {
		"bash": {
			"command": "bash-language-server",
			"args": ["start"],
			"filetypes": ["sh"],
			"ignoredRootPaths": ["~"]
		}
	},

	// prettier
	"prettier.arrowParens": "always",
	"prettier.bracketSpacing": true,
	"prettier.endOfLine": "lf",
	"prettier.printWidth": 80,
	"prettier.semi": true,
	"prettier.singleQuote": false,
	"prettier.tabWidth": 4,
	"prettier.trailingComma": "es5",
	"prettier.useTabs": true
}
