[alias]
	aliases = config --get-regexp ^alias

	br = branch
	ci = commit -v
	co = checkout
	st = status
	cp = cherry-pick

	abbr = !sh -c 'git rev-parse --short ${1-`echo HEAD`}' -
	ack = grep --break --heading
	amend = commit --amend -v
	count = !git --no-pager log --oneline | wc -l
	dupes = !git ls-tree -r HEAD | cut -c 13- | sort | uniq -D -w 40
	no-edit = commit --amend --no-edit
	reword = commit --amend --only -v --
	staged = diff --cached --ignore-submodules=dirty

	files = !git diff --name-only $(git merge-base HEAD \"$GIT_REVIEW_BASE\")
	state = !git diff --stat $(git merge-base HEAD \"$GIT_REVIEW_BASE\")

	fixup = !git log -n 50 --pretty=format:'%h %s' --no-merges | fzf | cut -c -7 | xargs -o git commit --fixup
	irebase = !git log -n 50 --pretty=format:'%h %s' --no-merges | fzf | cut -c -7 | xargs -o git rebase -i

	flog = !sh -c 'git-fuzzy-log'
	graph = !git --paginate log --graph --pretty=format:'%C(auto)%h%Creset%C(auto)%d%Creset %s %C(magenta bold)(%cr)%Creset %C(cyan)<%aN>%Creset'
	min-graph = !git --paginate log --graph --all --simplify-by-decoration --pretty=format:'%C(auto)%h%Creset%C(auto)%d%Creset %s %C(magenta bold)(%cr)%Creset %C(cyan)<%aN>%Creset'

	prev = !git --paginate log -1 --pretty=format:%B
	hist = !git --paginate log --pretty=format:'%C(auto)%h%Creset %s%C(auto)%d%Creset %C(magenta bold)(%cr)%Creset %C(cyan)<%aN>%Creset'

	review = !nvim +\"tabdo DiffviewOpen $GIT_REVIEW_BASE -uno\"
	rollback = !sh -c 'git reset --merge HEAD~${1-1}' -
	standup = "!git log --since yesterday  --author `git config user.email` --pretty=oneline"

[color]
	ui = auto

[color "diff-highlight"]
	newhighlight = reverse
	newreset = noreverse
	oldhighlight = reverse
	oldreset = noreverse

[color "interactive"]
	prompt = blue reverse

[color "status"]
	untracked = blue

[core]
	editor = nvim

[delta]
	colorMoved = default
	commit-decoration-style = "#bebebe" box ul
	features = line-numbers decorations
	file-decoration-style = none
	file-style = omit
	hunk-header-style = file line-number syntax
    hunk-header-file-style = "#6f8fb4" bold
	hunk-header-decoration-style = black box ul
    hunk-header-line-number-style = bold dim
	line-numbers-left-style = "#5f5f5f"
	line-numbers-right-style = "#5f5f5f"
	line-numbers-minus-style = "#F75149" ; "#22151A"
	line-numbers-plus-style = "#3FB950" ; "#111F1C"
	line-numbers-zero-style = 243
	plus-style = syntax "#132E1F"
	minus-style = syntax "#36191C"
	minus-emph-style = syntax "#882728"
	plus-emph-style = syntax "#226D33"
	syntax-theme = kdark

[diff]
	algorithm = histogram
	compactionHeuristic = true

[grep]
	lineNumber = true
	patternType = perl

[init]
	defaultBranch = main

[interactive]
	diffFilter = delta --color-only

[log]
	decorate = short

[merge]
	tool = nvim

[mergetool]
	prompt = true

[mergetool "nvim"]
	cmd = nvim +\"tabdo DiffviewOpen\"

[pager]
	diff = delta
	log = delta
	show = delta
	whatchanged = delta

	show-branch = true
	status = true

[pull]
	rebase = false

[rebase]
	autosquash = true
