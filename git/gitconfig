[alias]
	abbrev = !sh -c 'git rev-parse --short ${1-`echo HEAD`}' -
	ack = grep --break --heading
	amend = commit --amend -v
	both = diff --ignore-submodules=dirty HEAD
	br = branch
	ci = commit -v
	co = checkout
	st = status
	cp = cherry-pick
	no-edit = commit --amend --no-edit
	reword = commit --amend --only -v --
	staged = diff --cached --ignore-submodules=dirty

	count = !git --no-pager log --oneline | wc -l
	dupes = !"git ls-tree -r HEAD | cut -c 13- | sort | uniq -D -w 40"

	graph = !git --paginate log --graph --pretty=format:'%C(auto)%h%Creset%C(auto)%d%Creset %s %C(magenta bold)(%cr)%Creset %C(cyan)<%aN>%Creset'
	min-graph = !git --paginate log --graph --all --simplify-by-decoration --pretty=format:'%C(auto)%h%Creset%C(auto)%d%Creset %s %C(magenta bold)(%cr)%Creset %C(cyan)<%aN>%Creset'

	message = !git --paginate log -1 --pretty=format:%B
	msg = message
	oneline = !git --paginate log --pretty=format:'%C(auto)%h%Creset %s%C(auto)%d%Creset %C(magenta bold)(%cr)%Creset %C(cyan)<%aN>%Creset'

	rollback = !sh -c 'git reset --merge HEAD~${1-1}' -

[color]
	ui = auto

[color "diff-highlight"]
	newhighlight = reverse
	newreset = noreverse
	oldhighlight = reverse
	oldreset = noreverse

[color "interactive"]
	prompt = blue reverse

[color "status"]
	untracked = blue

[delta]
	commit-decoration-style = bold yellow box ul
	features = line-numbers decorations
	file-decoration-style = none
	file-style = bold blue ul
	hunk-header-style = omit
	hunk-header-decoration-style = black box ul
	line-numbers-left-style = black
	line-numbers-right-style = black
	line-numbers-minus-style = "#F75149"
	line-numbers-plus-style = "#3FB950"
	line-numbers-zero-style = 243
	plus-style = syntax "#132E1F"
	minus-style = syntax "#36191C"
	syntax-theme = kdark

[diff]
	algorithm = histogram
	compactionHeuristic = true	

[grep]
	lineNumber = true
	patternType = perl

[interactive]
	diffFilter = delta --color-only

[interactive]
	diffFilter = delta --color-only

[log]
	decorate = short

[merge]
	conflictStyle = diff3
	log = 1000
	tool = vimdiff3

[pager]
	diff = delta
	log = delta
	show = delta
	whatchanged = delta

	show-branch = true
	status = true

[pull]
	rebase = false
