{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.28/schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.yaml",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 5,
  "default_container_padding": 5,
  "animation": {
    "enabled": true,
    "duration": 100,
    "style": "Linear",
    "fps": 140
  },
  "border": true,
  "border_implementation": "Komorebi",
  "border_width": 2,
  "border_offset": 0,
  "border_style": "Rounded",
  "border_colours": {
    "single": "#97b6e5",
    "stack": "#f7768e",
    "monocle": "#7f849c",
    "unfocused": "#373737"
  },
  "stackbar": {
    "height": 20,
    "mode": "OnStack",
    "label": "Title",
    "tabs": {
      "width": 200,
      "focused_text": "#f7768e",
      "unfocused_text": "#5a5a5a",
      "background": "#373737",
      "font_family": "Futura PT",
      "font_size": 14
    }
  },
  "display_index_preferences": {
    //left: portrait
    "0": "GSM5B55-5&25bf14bb&0&UID270592",
    //center: primary
    "1": "GSM7727-5&25bf14bb&0&UID270597"
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "portrait",
          "layout": "Rows"
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "primary",
          "layout_rules": {
            "1": "VerticalStack",
            "4": "UltrawideVerticalStack"
          },
          "custom_layout_rules": {
            "3": "C:/Users/Demaro/.config/komorebi/main-layout.json"
          }
        }
      ]
    }
  ]
}
