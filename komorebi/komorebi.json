{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.34/schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_boundary_behaviour": "Monitor",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 5,
  "default_container_padding": 5,
  "floating_window_aspect_ratio": "Ultrawide",
  "mouse_follows_focus": false,
  "animation": {
    "enabled": true,
    "duration": 250,
    "fps": 140,
    "style": "Linear"
  },
  "border": true,
  "border_offset": -1,
  "border_width": 5,
  "border_colours": {
    "floating": "#97b6e5",
    "single": "#97b6e5",
    "stack": "#f7768e",
    "monocle": "#7f849c",
    "unfocused": "#373737"
  },
  "stackbar": {
    "height": 20,
    "mode": "Never",
    "label": "Title",
    "tabs": {
      "width": 200,
      "focused_text": "#f7768e",
      "unfocused_text": "#5a5a5a",
      "background": "#373737",
      "font_family": "Futura PT",
      "font_size": 16
    }
  },
  "display_index_preferences": {
    /* left: portrait */
    "0": "GSM5B55-5&25bf14bb&0&UID270592",
    /* center: primary */
    "1": "GSM7727-5&25bf14bb&0&UID270597"
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "portrait",
          "layout": "Rows",
          "window_container_behaviour_rules": {
            "0": "Create",
            "2": "Append"
          }
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "primary",
          "layout": "UltrawideVerticalStack",
          "window_container_behaviour_rules": {
            "0": "Create",
            "3": "Append"
          }
        }
      ]
    }
  ]
}
